{
    "compilerOptions": {
        "target": "ES2021",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "build",
        "rootDirs": [
            "."
        ],
        "types": [
            "node"
        ],
        "paths": {
            "wat" : [ "watsrc/*" ],
            "typescript": ["tssrc/*"],
        },
        "baseUrl": ".",
        "sourceMap": true
    },
    "include": [
        "watsrc/*.ts",
        "tssrc/*.ts",
        "tests/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}
